{
  "tasks": {
    "dev": "deno run -A --watch=static/,routes/ dev.ts",
    "build": "deno run -A dev.ts build",
    "start": "deno serve -A _fresh/server.js"
  },
  "exclude": [
    "**/_fresh/*"
  ],
  "imports": {
    "@/": "./",
    "@std/assert": "jsr:@std/assert@^1.0.18",
    "@std/path": "jsr:@std/path@1.1.1",
    "@std/yaml": "jsr:@std/yaml@1.0.10",
    "@std/streams": "jsr:@std/streams@1.0.13",
    "@std/fmt/colors": "jsr:@std/fmt@1.0.6/colors",
    "fresh": "jsr:@fresh/core@^2.2.0",
    "fresh/dev": "jsr:@fresh/core@^2.2.0/dev",
    "fresh/runtime": "jsr:@fresh/core@^2.2.0/runtime",
    "preact": "npm:preact@^10.27.2",
    "@preact/signals": "npm:@preact/signals@^2.5.0",
    "lexorank": "npm:lexorank@1.0.5"
  },
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.asynciterable",
      "dom.iterable",
      "deno.ns"
    ],
    "jsx": "precompile",
    "jsxImportSource": "preact",
    "jsxPrecompileSkipElements": [
      "a",
      "img",
      "source",
      "body",
      "html",
      "head",
      "title",
      "meta",
      "script",
      "link",
      "style",
      "base",
      "noscript",
      "template"
    ]
  }
}
