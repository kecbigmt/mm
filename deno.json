{
  "tasks": {
    "exec": "deno run --allow-read --allow-write --allow-env --allow-run --allow-sys src/main.ts",
    "test": "deno task test:all",
    "test:file": "deno test --allow-read --allow-write --allow-env --allow-run --allow-sys",
    "test:unit": "deno test --fail-fast=1 --allow-read --allow-write --allow-env --allow-run --allow-sys src/",
    "test:e2e": "deno task compile && MM_TEST_BINARY=./mm deno test --allow-read --allow-write --allow-env --allow-run --allow-sys tests/e2e/scenarios/",
    "test:e2e:slow": "deno test --allow-read --allow-write --allow-env --allow-run --allow-sys tests/e2e/scenarios/",
    "test:all": "deno task test:unit && deno task test:e2e",
    "bench": "deno bench --allow-read --allow-write --allow-env --allow-run --allow-sys",
    "bench:unit": "deno bench --allow-read --allow-write --allow-env --allow-sys src/",
    "bench:e2e": "deno bench --allow-read --allow-write --allow-env --allow-run --allow-sys tests/performance/",
    "compile": "deno compile --config=deno.json --allow-read --allow-write --allow-env --allow-run --allow-sys --output=mm src/main.ts",
    "install": "deno install --global --config=deno.json --allow-read --allow-write --allow-env --allow-run --allow-sys --force --name mm src/main.ts",
    "check-docs": "./scripts/check-docs.sh",
    "dev": "deno task --cwd=fresh dev"
  },
  "compilerOptions": {
    "strict": true
  },
  "fmt": {
    "include": [
      "src",
      "tests",
      "fresh",
      "README.md"
    ],
    "exclude": [
      "**/*.css"
    ],
    "lineWidth": 100,
    "indentWidth": 2
  },
  "lint": {
    "include": [
      "src",
      "tests",
      "fresh"
    ]
  },
  "imports": {
    "fresh": "jsr:@fresh/core@^2.0.0",
    "@fresh/core": "jsr:@fresh/core@^2.0.0",
    "@fresh/plugin-vite": "jsr:@fresh/plugin-vite@^1.0.0",
    "preact": "npm:preact@^10.26.9",
    "preact/hooks": "npm:preact@^10.26.9/hooks",
    "@std/assert": "jsr:@std/assert@1.0.14",
    "@std/path": "jsr:@std/path@1.1.1",
    "@std/cli": "jsr:@std/cli@1.0.14",
    "@std/yaml": "jsr:@std/yaml@1.0.10",
    "@std/streams": "jsr:@std/streams@1.0.13",
    "@std/fmt/colors": "jsr:@std/fmt@1.0.6/colors",
    "@cliffy/command": "jsr:@cliffy/command@1.0.0-rc.8",
    "@std/testing": "jsr:@std/testing@^1.0.15",
    "@std/testing/bdd": "jsr:@std/testing@1.0.15/bdd",
    "@std/uuid/unstable-v7": "jsr:@std/uuid@1.0.9/unstable-v7",
    "lexorank": "npm:lexorank@1.0.5"
  }
}