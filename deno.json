{
  "tasks": {
    "start": "deno run src/main.ts",
    "dev": "deno run --watch src/main.ts",
    "test": "deno test --allow-read --allow-write"
  },
  "compilerOptions": {
    "strict": true
  },
  "fmt": {
    "include": ["src", "tests", "README.md"],
    "lineWidth": 100,
    "indentWidth": 2
  },
  "lint": {
    "include": ["src", "tests"]
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1.0.14",
    "@std/path": "jsr:@std/path@1.1.1",
    "@std/cli": "jsr:@std/cli@1.0.14",
    "@cliffy/command": "jsr:@cliffy/command@1.0.0-rc.4",
    "@std/testing": "jsr:@std/testing@^1.0.15",
    "@std/testing/bdd": "jsr:@std/testing@1.0.15/bdd",
    "@std/uuid/unstable-v7": "jsr:@std/uuid/unstable-v7@1.0.0",
    "lexorank": "npm:lexorank@1.0.5"
  }
}
