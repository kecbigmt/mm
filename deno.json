{
  "tasks": {
    "start": "deno run src/main.ts",
    "dev": "deno run --watch src/main.ts",
    "test": "deno task test:all",
    "test:file": "deno test --allow-read --allow-write --allow-env --allow-run",
    "test:unit": "deno test --fail-fast=1 --allow-read --allow-write --allow-env src/",
    "test:e2e": "deno test --allow-read --allow-write --allow-env --allow-run tests/e2e/scenarios/",
    "test:all": "deno task test:unit && deno task test:e2e",
    "bench": "deno bench --allow-read --allow-write --allow-env --allow-run",
    "bench:unit": "deno bench --allow-read --allow-write --allow-env src/",
    "bench:e2e": "deno bench --allow-read --allow-write --allow-env --allow-run tests/performance/",
    "compile": "deno compile --config=deno.json --allow-read --allow-write --allow-env --output=mm src/main.ts",
    "install": "deno install --global --config=deno.json --allow-read --allow-write --allow-env --force --name mm src/main.ts"
  },
  "compilerOptions": {
    "strict": true
  },
  "fmt": {
    "include": ["src", "tests", "README.md"],
    "lineWidth": 100,
    "indentWidth": 2
  },
  "lint": {
    "include": ["src", "tests"]
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1.0.14",
    "@std/path": "jsr:@std/path@1.1.1",
    "@std/cli": "jsr:@std/cli@1.0.14",
    "@std/yaml": "jsr:@std/yaml@1.0.10",
    "@std/streams": "jsr:@std/streams@1.0.13",
    "@cliffy/command": "jsr:@cliffy/command@1.0.0-rc.8",
    "@std/testing": "jsr:@std/testing@^1.0.15",
    "@std/testing/bdd": "jsr:@std/testing@1.0.15/bdd",
    "@std/uuid/unstable-v7": "jsr:@std/uuid@1.0.9/unstable-v7",
    "lexorank": "npm:lexorank@1.0.5"
  }
}
